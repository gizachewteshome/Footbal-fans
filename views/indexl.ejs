<% include partials/header.ejs %>
<div class="table-wrapper">
     <% if (leagues.length > 0) {%>
           <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">League Name</th>
                        <th scope="col">Country</th>
                        <th scope="col">Number of Clubs</th>
                        <th scope="col">Number of Supporters</th>
                        <th scope="col">Username</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% leagues.forEach((league, index) => { %>
                        <tr>
                            <th scope="row"><%= league.id %></th>
                            <td><img src="/assets/img/<%= league.image %>" class="rounded-circle player-img" alt=""></td>
                            <td><%= league.league_name %></td>
                            <td><%= league.country %></td>
                            <td><%= league.numberofclub %></td>
                            <td><%= league.numberofsupporters %></td>
                            <td>@<%= league.user_name %></td>
                            <td>
                                <a href="/league-edit/<%= league.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= league.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No leagues found. Go <a href="/add" >here</a> to add leagues.</p>
        <% } %>
    </div>
