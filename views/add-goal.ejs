<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="" id="name_goal_scorer" placeholder="Goal Scorer" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="typeofcompeti" id="typeofcompeti" placeholder="Type of Competition" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="numbergoal" id="numbergoal" placeholder="Number of Goal" required>
                </div>
               <div class="form-row">
                <div class="form-group col-md-7">
                    <input type="text" class="form-control" name="club" id="club" placeholder="Name of Club" required>
                </div>
              <div class="form-row">
                <div class="form-group col-md-7">
                    <input type="date" class="form-control" name="date" id="date" placeholder="DD/MM/YYYY" required>
                </div>
                <div class="col-md-12">
                    <label for="player-img"><b>Goal Image</b></label><br>
                    <input type="file" name="image" id="player-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Goal</button>
        </form>
    </div>
</div>
</body>
</html>
