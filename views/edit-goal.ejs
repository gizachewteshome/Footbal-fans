<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (player) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="first-name">Name of Goal Scorer</label>
                    <input type="text" class="form-control" name="name_goal_scorer" id="name_goal_scorer" value="<%= goal.name_goal_scorer %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="last-name">Type of Competition</label>
                    <input type="text" class="form-control" name="typeofcompeti" id="typeofcompeti" value="<%= goal.typeofcompeti %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="username">Number of Goal</label>
                    <input type="number" class="form-control" name="numbergoal" id="numbergoal" value="<%= goal.numbergoal %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="number">Club</label>
                    <input type="text" class="form-control" name="club" id="club" placeholder="Club" value="<%= goal.club %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Goal</button>
        </form>
    <% } else { %>
        <p class="text-center">Goal Not Found. Go <a href="/add">here</a> to add goals.</p>
    <% } %>
</div>
</div>
</body>
</html>